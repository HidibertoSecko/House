<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagesource"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/precio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio"
            android:textColor="#ff0000"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hola amigos"
            android:id="@+id/description"
            android:layout_below="@+id/precio"/>

        <TextView
            android:id="@+id/zona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/description"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <Button
            android:id="@+id/ver_descripcion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="#108797"
            android:onClick="descripcionhome"
            android:text="detalles"
            android:textColor="#B3F1B3"
            android:textColorLink="#00D33636" />

        <Button
            android:id="@+id/boton_ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#108797"
            android:onClick="ubicacion"
            android:text=" ubicacion"
            android:textColor="#B3F1B3"
            android:textColorLink="#00D33636" />
    </LinearLayout>

</LinearLayout>